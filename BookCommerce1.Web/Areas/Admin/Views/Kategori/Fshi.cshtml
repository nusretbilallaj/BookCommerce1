@using BookCommerce1.Model
@model Kategoria
<form method="post">
    <input type="hidden" asp-for="Id"/>
    <div class="border p-3">
        <div class="row">
            <h2 class="text-primary">Shtimi i kategoriesë</h2>
        </div>
        <div class="mb-2">
            <label asp-for="Emri"></label>
            <input disabled asp-for="Emri" class="form-control"/>
        </div>
        <div class="mb-2">
            <label asp-for="Renditja"></label>
            <input disabled asp-for="Renditja" class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger">Fshi</button>
        <a asp-controller="Kategori" asp-action="Listo" class="btn btn-secondary">Kthehu</a>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
   
}
